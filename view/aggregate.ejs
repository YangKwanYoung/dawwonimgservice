<!-- views/aggregate.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>이미지 조회(표타입)</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* 추가된 CSS 스타일 */
      .aggregate-table {
        width: 100%;
        text-align: center;
      }

      .aggregate-table th,
      .aggregate-table td {
        border: 1px solid #dee2e6;
        padding: 8px;
      }

      .aggregate-table th {
        background-color: #f8f9fa;
      }

      /* 날짜 및 현장 텍스트 중앙 정렬 */
      .aggregate-table th:first-child,
      .aggregate-table td:first-child {
        text-align: center;
      }

      /* 데이터 없음 메시지 스타일 */
      .no-data {
        text-align: center;
        margin-top: 20px;
        font-style: italic;
      }
      .modal-body {
        max-height: 70vh;
        overflow-y: auto;
      }
      .modal-body img {
        width: 100%;
        height: auto;
      }
      .modal-content {
        background-color: #fff; /* 모달 창 내용의 배경색을 흰색으로 설정 */
        border: none;
      }
      .modal-dialog {
        max-width: 90%;
      }
      .col-md-4 {
        padding: 0.5rem;
      }
      .img-fluid {
        border-radius: 5px;
        transition: transform 0.2s ease-in-out;
      }
      .img-fluid:hover {
        transform: scale(1.05);
      }
      .image-label {
        display: block; /* 라벨을 블록 수준 요소로 표시하여 이미지 아래에 위치하도록 설정 */
        margin-bottom: 5px; /* 이미지와 라벨 사이의 간격 조정 */
        font-size: 14px; /* 라벨의 글꼴 크기 설정 */
        font-weight: bold; /* 라벨 텍스트의 굵기 설정 */
        color: #333; /* 라벨 텍스트의 색상 설정 */
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <!-- 로고 -->
        <a class="navbar-brand" href="/">
          <img
            src="/logo.png"
            alt="로고 이미지"
            width="50"
            height="50"
            class="d-inline-block align-top"
          />
        </a>
        <a class="navbar-brand">이미지 조회(표타입)</a>

        <!-- 토글 버튼 -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- 메뉴 -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">이미지 등록 </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/map">이미지 조회(지도형)</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <h1 class="mt-5 mb-3">일자별 현장 및 공종별 이미지 집계</h1>
      <!-- 검색 조건 입력 폼 -->
      <form class="mb-4" id="searchForm">
        <div class="row">
          <div class="col">
            <label for="startDate">시작 날짜:</label>
            <input
              type="date"
              class="form-control"
              id="startDate"
              name="startDate"
            />
          </div>
          <div class="col">
            <label for="endDate">종료 날짜:</label>
            <input
              type="date"
              class="form-control"
              id="endDate"
              name="endDate"
            />
          </div>
          <div class="col mt-4">
            <button type="submit" class="btn btn-primary">검색</button>
          </div>
        </div>
      </form>
      <% if (Object.keys(aggregateData).length === 0) { %>
      <!-- 데이터 없음 메시지 -->
      <div class="no-data">데이터가 없습니다.</div>
      <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered aggregate-table">
          <thead>
            <tr>
              <th>날짜</th>
              <th>현장</th>
              <th>공종</th>
              <th>이미지 수</th>
              <th>이미지 다운로드</th>
              <th>이미지 보기</th>
            </tr>
          </thead>
          <tbody>
            <% Object.entries(aggregateData).forEach(([date, siteData]) => { %>
            <% Object.entries(siteData).forEach(([site, typeData]) => { %> <%
            Object.entries(typeData).forEach(([type, count]) => { %>
            <tr>
              <!-- 날짜는 현장 및 공종 데이터가 처음 나올 때만 표시 -->
              <% if (site === Object.keys(siteData)[0] && type ===
              Object.keys(typeData)[0]) { %>
              <td rowspan="<%= Object.keys(typeData).length %>"><%= date %></td>
              <% } %>
              <!-- 현장은 공종 데이터가 처음 나올 때만 표시 -->
              <% if (type === Object.keys(typeData)[0]) { %>
              <td rowspan="<%= Object.keys(typeData).length %>"><%= site %></td>
              <% } %>
              <td><%= type %></td>
              <td><%= count %></td>
              <td>
                <button
                  onclick="downloadImages('<%= date %>', '<%= site %>', '<%= type %>')"
                  class="btn btn-primary mx-2"
                >
                  이미지 다운로드
                </button>
              </td>
              <td>
                <button
                  onclick="viewImages('<%= date %>', '<%= site %>', '<%= type %>')"
                  class="btn btn-primary mx-2"
                >
                  이미지 보기
                </button>
              </td>
            </tr>
            <% }); %> <% }); %> <% }); %>
          </tbody>
        </table>
      </div>
      <% } %>

      <!-- 이미지 모달 -->
      <div
        class="modal fade"
        id="imageModal"
        tabindex="-1"
        aria-labelledby="imageModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered modal-xl">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="imageModalLabel">이미지 보기</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div class="container-fluid">
                <div
                  class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4"
                  id="imageGrid"
                >
                  <!-- 이미지 그리드가 여기에 동적으로 추가됨 -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 부트스트랩 스크립트 추가 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      // 폼 서브미트 시 검색 실행
      document
        .getElementById("searchForm")
        .addEventListener("submit", function (event) {
          event.preventDefault(); // 기본 동작 방지

          const startDate = document.getElementById("startDate").value;
          const endDate = document.getElementById("endDate").value;

          // 검색 조건을 URL 파라미터로 추가하여 페이지 이동
          const url = `/aggregate?startDate=${startDate}&endDate=${endDate}`;
          window.location.href = url;
        });

      async function downloadImages(date, site, type) {
        // 서버에 검색 요청을 보냄
        const response = await fetch(
          `/search?constructionSite=${site}&startDate=${date}&endDate=${date}&constructionType=${type}`
        );
        const data = await response.json();
        // 검색 결과가 있는 경우
        if (data.length > 0) {
          // 이미지 다운로드 URL 생성
          const url = `/download?constructionSite=${site}&date=${date}&constructionType=${type}`;
          // 이미지 다운로드 링크 생성
          const link = document.createElement("a");
          link.href = url;
          link.download = "images.zip";
          // 링크 클릭하여 다운로드 실행
          link.click();
        } else {
          alert("선택하신 조건에 등록된 이미지가 없습니다.");
        }
      }
      async function viewImages(date, site, type) {
        const imageGrid = document.getElementById("imageGrid");
        imageGrid.innerHTML = ""; // 이미지 그리드 비우기
        // 서버에 검색 요청을 보냄
        const response = await fetch(
          `/search?constructionSite=${site}&startDate=${date}&endDate=${date}&constructionType=${type}`
        );
        const data = await response.json();
        if (data.length > 0) {
          data.forEach((item) => {
            const imageUrl =
              "https://storage.googleapis.com/itfimgsaveservice.appspot.com" +
              item.imageUrl;
            const img = document.createElement("img");
            img.src = imageUrl;
            img.className = "img-fluid";
            const captionText = `현장: ${item.constructionSite}, 공종: ${item.constructionType}, 날짜: ${item.date}`;
            const label = document.createElement("label");
            label.textContent = captionText; // 캡션 텍스트 설정
            label.className = "image-label"; // 추가적인 스타일링을 위해 클래스 추가
            // 라벨과 이미지를 함께 묶어서 출력
            const col = document.createElement("div");
            col.className = "col-md-4 mb-3";
            col.appendChild(label); // 라벨 추가
            col.appendChild(img); // 이미지 추가
            imageGrid.appendChild(col);
          });
          const modal = new bootstrap.Modal(
            document.getElementById("imageModal")
          );
          modal.show();
        } else {
          alert("선택하신 조건에 등록된 이미지가 없습니다.");
        }
      }
    </script>
  </body>
</html>
